<?xml version="1.0" encoding="utf-8"?>
<layer-list
    android:paddingMode="stack"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/screenrecord_spinner_background_radius" />
            <stroke
                android:width="1.0dip"
                android:color="?android:textColorTertiary" />
            <solid
                android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:textColor="?android:textColorPrimary"
        android:gravity="end|center"
        android:height="@dimen/screenrecord_spinner_arrow_size"
        android:width="@dimen/screenrecord_spinner_arrow_size"
        android:drawable="@drawable/ic_ksh_key_down"
        android:end="20.0dip" />
</layer-list>